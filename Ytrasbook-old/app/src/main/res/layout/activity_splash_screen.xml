<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@color/white"
tools:context=".SplashScreen">

<ImageView
    android:id="@+id/splash_screen"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/ytras_book"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

<ProgressBar
    android:id="@+id/progress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:indeterminate="true"
    android:indeterminateTint="@color/colorOrange"
    app:layout_constraintTop_toBottomOf="@+id/splash_screen"
    app:layout_constraintRight_toRightOf="@+id/splash_screen"
    app:layout_constraintLeft_toLeftOf="@+id/splash_screen"
    android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Ytras"
        android:textStyle="bold"
        android:textColor="@color/colorOrange"
        app:layout_constraintTop_toBottomOf="@+id/progress"
        app:layout_constraintRight_toRightOf="@+id/progress"
        app:layout_constraintLeft_toLeftOf="@+id/progress"
        android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>