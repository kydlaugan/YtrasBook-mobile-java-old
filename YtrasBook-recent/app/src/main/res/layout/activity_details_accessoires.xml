<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetailsAccessoires">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/previous"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginEnd="10dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/recherche"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:clickable="true"
                    app:cardCornerRadius="35dp"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:src="@drawable/baseline_search_24" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="5dp"
                            android:text="Rechercher un article .... "
                            android:textColor="@color/black" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:focusable="true"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Titre :  "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="3dp"
                        android:textStyle="italic"/>
                    <TextView
                        android:id="@+id/titre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cahiers Afrique "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre de pages :  "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"
                        android:textStyle="italic"/>
                    <TextView
                        android:id="@+id/classe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40  "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantité par paquets :  "
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:textStyle="italic"/>
                    <TextView
                        android:id="@+id/auteur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/prix"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="10.000"
                        android:textSize="20sp"
                        android:textColor="#ED4712"
                        android:gravity="center"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Franc FCA"
                        android:textSize="20sp"
                        android:textColor="#ED4712"
                        android:layout_marginStart="8dp"
                        android:textStyle="italic"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Quantité : "
                android:layout_marginEnd="15dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/orange">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/quantite"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="de 1 à 100"
                    android:gravity="center"
                    android:text="1"
                    android:textColorHighlight="@color/black"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/panier"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            app:cornerRadius="60dp"
            android:textSize="10sp"
            android:text="Ajouter au panier"
            app:backgroundTintMode="src_over"
            app:backgroundTint="@color/orange"
            android:layout_marginTop="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Livres de la meme classe "
                android:textSize="13sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/voirplus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_marginRight="10dp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:text="Voir Plus "/>

        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:scrollbars="none">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="1200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <GridView
                        android:id="@+id/gridview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnWidth="120dp"
                        android:numColumns="10"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbars="horizontal"
                        android:stretchMode="none"
                        android:verticalSpacing="1dp"/>
                </LinearLayout>
            </FrameLayout>
        </HorizontalScrollView>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:focusable="true"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="25dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp">
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:iss_auto_cycle="true"
                app:iss_period="1000"
                app:iss_delay="1000"
                app:iss_text_align="CENTER"
                app:iss_corner_radius="30"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categorie1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autres   "
                android:textSize="13sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="start" />

            <TextView
                android:id="@+id/voirplus1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_marginRight="10dp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:text="Voir Plus "
                android:gravity="end" />

        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:scrollbars="none">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="1200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <GridView
                        android:id="@+id/gridview1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnWidth="120dp"
                        android:numColumns="10"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbars="horizontal"
                        android:stretchMode="none"
                        android:verticalSpacing="1dp"/>
                </LinearLayout>
            </FrameLayout>
        </HorizontalScrollView>



    </LinearLayout>


</ScrollView>